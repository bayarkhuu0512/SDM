<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/leftMenuItemContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/leftmenu_margin"
    android:paddingTop="@dimen/leftmenu_margin">

    <ImageView
        android:id="@+id/leftMenuIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/leftmenu_margin"
        android:background="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/leftMenuName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/mainFontSize" />
</LinearLayout>