<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/tabLayoutContainer"
        style="@style/TabLayoutContainerStyle">

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_view"
            style="@style/TabLayoutStyle"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/colorSkytelYellow"
            app:tabTextColor="@color/colorTabTextColor"

            />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabLayoutContainer"></android.support.v4.view.ViewPager>

</RelativeLayout>